<h1>Task List</h1>

<% if @tasks.any? %>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
  <%= paginate @tasks %>
  </div>

<% end %>

<%= link_to '新規タスク作成', new_task_path, class: "btn btn-primary" %>